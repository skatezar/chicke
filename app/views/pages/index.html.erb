<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>CHICKE-CHICKE</title>
</head>
<body>
<p>
	<%= link_to "Add New Item", new_item_path, class: "btn btn-danger m-3" %>
</p>

<div class="container">
  <h1 class="text-center mt-3">All Items</h1>

  <div class="row mt-4">
    <% @items.each do |item| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= item.title %></h5>
            <p class="card-text"><strong>Description:</strong> <%= item.description %></p>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(item.price) %></p>
            <div class="d-flex justify-content-between">
            	<%= link_to "View Details", item_path(item), class: "btn btn-primary" %><%= link_to "BID", item_path(item), class: "btn btn-danger" %>	
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

</body>
